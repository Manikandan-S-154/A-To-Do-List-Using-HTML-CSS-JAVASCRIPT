<!DOCTYPE html>
<Title>To-Do Application</Title>
<body>
    <div id="u">
        <h1 style="text-align: center;">A To-Do List</h1>
        <input id="input_item">
        <button onclick="f()">Add</button>
        
    </div>
    <ul id="list">
            <li>
                Go to Gym
            <button onclick="de(event)" >Done</button>
            </li>
        </ul>
    
</body>

<style>
     #u{
        background-color: rgb(59, 157, 123);
        text-align: center;
        color: white;
     }
     #list{
        padding: 0px;
        text-align: center;
        background-color:rgb(83, 31, 130);
        color: white;
     }
     
</style>
<script>

    var a=document.getElementById("list")
    function f(){
        
        var c=document.getElementById("input_item")
        var b=document.createElement("li")
        
        b.innerHTML=c.value +""+"<button onclick=de(event)>Done</Delete>"
        a.append(b)
    }

    function de(event){
        event.target.parentElement.remove()
    }
</script>
